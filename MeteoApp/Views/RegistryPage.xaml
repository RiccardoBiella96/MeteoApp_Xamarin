<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoApp.Views.RegistryPage">
    <ContentPage.Content>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0">
                <Label Text="Please enter your credentials" />
                <Entry Text="{Binding User.Username}"
                       Placeholder="Username" />
                <Entry Text="{Binding User.Password}"
                       Placeholder="Password"
                       IsPassword="True" />
                <Entry Text="{Binding Password}"
                       Placeholder="Confirm Password"
                       IsPassword="True" />
                <Label Text="Invalid credentials entered" 
                       x:Name="AreCredentialsInvalid"
                       TextColor="Red" />
            </StackLayout>

            <Button Grid.Row="3" Text="Registry" Clicked="verifyCredential" VerticalOptions="Start" />
        </Grid>
    </ContentPage.Content>
</ContentPage>